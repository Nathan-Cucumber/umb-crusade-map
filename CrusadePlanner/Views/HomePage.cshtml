@using Umbraco.Cms.Web.Common.PublishedModels;
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<ContentModels.HomePage>
@using ContentModels = Umbraco.Cms.Web.Common.PublishedModels;
@{
	Layout = null;
}

<h1>There will be some content here at some point. Honest!</h1>
<div class="row">
    <div class="col-md-6">
        <h2>Latest News</h2>
        @foreach (var item in Model.PublishedContent.Children.Where("Visible"))
        {
            <div class="news-item">
                <h3>@item.name</h3>
                <p>@item.Intro</p>
                <a href="@item.Url()">Read more</a>
            </div>
        }
    </div>
    <div class="col-md-6">
        <h2>Latest Events</h2>
        @foreach (var item in Model.PublishedContent.Children.Where("Visible"))
        {
            <div class="event-item">
                <h3>@item.name</h3>
                <p>@item.Intro</p>
                <a href="@item.Url()">Read more</a>
            </div>
        }
    </div>
 </div>

